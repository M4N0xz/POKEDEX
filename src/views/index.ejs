<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PokeDex Unicesumar</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h1 class="text-center mb-4">PokeDex Unicesumar</h1>
        
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% results.forEach(pokemon => { %>
            <div class="col">
                <div class="card h-100 border border-dark">
                    <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/<%= pokemon.url.split('/')[6] %>.png" 
                        class="card-img-top p-4" alt="Imagem do <%= pokemon.name %>">
                    <div class="card-body text-center">
                        <a href="/pokemon/<%=pokemon.name%>" class="stretched-link text-decoration-none">
                            <h5 class="card-title text-dark">Nome: <%= pokemon.name %></h5>
                        </a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- Bootstrap 5 JS (opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
